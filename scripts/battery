#!/bin/sh

i=0

while [[ i -eq 0 ]]; do

  b=$(acpi | cut -d ' ' -f 4 | tr -d % | tr -d ,)
  echo $b

  if [[ $b -eq 100 ]]; then
    herbe "Battery 100%" &
  fi
  if [[ $b -eq 51 ]]; then
    herbe "Battery 50%" &
  fi
  if [[ $b < 21 ]]; then
    herbe "Battery 20%" &
  fi
  if [[ $b < 11 ]]; then
    herbe "Battery 10%" &
  fi
  if [[ $b < 6 ]]; then
    herbe "Battery 5%" &
  fi

  sleep 900 # 15 minutes

done

exit 0

